@model LoL.ViewModel.TeamCreationViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Create</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.Id" />
            <div class="form-group">
                <label asp-for="Team.Name" class="control-label"></label>
                <input asp-for="Team.Name" class="form-control" />
                <span asp-validation-for="Team.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Team.Player1Id" class="control-label"></label>
                <select class="player-select form-control" id="player-select-1" asp-for="@Model.Team.Player1Id">
                    <option disabled=true selected=true value="">Select player</option>
                    @foreach (var player in Model.Players)
                    {
                        <option value="@player.Id">@player.Nickname</option>
                    }
                </select>
                <span asp-validation-for="Team.Player1Id" class="text-danger"></span>
            </div>
