                    {
                        <option value="@player.Id">@player.Nickname</option>
                    }
                </select>
                <span asp-validation-for="Team.Player3Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Team.Player4Id" class="control-label"></label>
                <select class="player-select form-control" id="player-select-4" asp-for="@Model.Team.Player4Id">
                    <option disabled=true selected=true value="">select player</option>
                    @foreach (var player in Model.Players)
                    {
                        <option value="@player.Id">@player.Nickname</option>
                    }
