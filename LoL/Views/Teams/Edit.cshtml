                    {
                        <option value="@player.Id">@player.Nickname</option>
                    }
                </select>
                <span asp-validation-for="Team.Player2Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Team.Player3Id" class="control-label"></label>
